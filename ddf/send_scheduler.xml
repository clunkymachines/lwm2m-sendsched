<?xml version="1.0" encoding="UTF-8"?>
<LWM2M xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:noNamespaceSchemaLocation="http://www.openmobilealliance.org/tech/profiles/LWM2M-v1_1.xsd">
  <Object ObjectType="MODefinition">
    <Name>Scheduler Control</Name>
    <Description1>Controls buffering behaviour of the custom send scheduler.</Description1>
    <ObjectID>20000</ObjectID>
    <ObjectURN>urn:oma:lwm2m:x:20000:1.0</ObjectURN>
    <LWM2MVersion>1.1</LWM2MVersion>
    <ObjectVersion>1.0</ObjectVersion>
    <MultipleInstances>Single</MultipleInstances>
    <Mandatory>Optional</Mandatory>
    <Resources>
      <Item ID="0">
        <Name>paused</Name>
        <Operations>RW</Operations>
        <MultipleInstances>Single</MultipleInstances>
        <Mandatory>Mandatory</Mandatory>
        <Type>Boolean</Type>
        <RangeEnumeration></RangeEnumeration>
        <Units></Units>
        <Description>Set to true to pause accumulation; clearing the flag resumes scheduling.</Description>
      </Item>
      <Item ID="1">
        <Name>max samples</Name>
        <Operations>RW</Operations>
        <MultipleInstances>Single</MultipleInstances>
        <Mandatory>Mandatory</Mandatory>
        <Type>Integer</Type>
        <RangeEnumeration></RangeEnumeration>
        <Units></Units>
        <Description>Number of buffered samples allowed before a transmission is forced.</Description>
      </Item>
      <Item ID="2">
        <Name>max old</Name>
        <Operations>RW</Operations>
        <MultipleInstances>Single</MultipleInstances>
        <Mandatory>Mandatory</Mandatory>
        <Type>Integer</Type>
        <RangeEnumeration></RangeEnumeration>
        <Units>seconds</Units>
        <Description>Maximum age in seconds permitted for the oldest buffered sample before a transmission is forced.</Description>
      </Item>
    </Resources>
    <Description2></Description2>
  </Object>
  <Object ObjectType="MODefinition">
    <Name>Sampling Rules</Name>
    <Description1>Defines per-resource sampling rules used by the send scheduler.</Description1>
    <ObjectID>20001</ObjectID>
    <ObjectURN>urn:oma:lwm2m:x:20001:1.0</ObjectURN>
    <LWM2MVersion>1.1</LWM2MVersion>
    <ObjectVersion>1.0</ObjectVersion>
    <MultipleInstances>Multiple</MultipleInstances>
    <Mandatory>Optional</Mandatory>
    <Resources>
      <Item ID="0">
        <Name>path</Name>
        <Operations>RW</Operations>
        <MultipleInstances>Single</MultipleInstances>
        <Mandatory>Mandatory</Mandatory>
        <Type>String</Type>
        <RangeEnumeration></RangeEnumeration>
        <Units></Units>
        <Description>LwM2M resource path to monitor, e.g. /3303/0/5700. The value must reference a resource (/Object/Instance/Resource) with numeric segments.</Description>
      </Item>
      <Item ID="1">
        <Name>collection rules</Name>
        <Operations>RW</Operations>
        <MultipleInstances>Multiple</MultipleInstances>
        <Mandatory>Optional</Mandatory>
        <Type>String</Type>
        <RangeEnumeration></RangeEnumeration>
        <Units></Units>
        <Description>Rule strings formatted as attribute=value. Supported attributes are pmin, pmax, epmin, epmax (integer values) and gt, lt, st (floating point values). Each attribute may appear at most once per instance.</Description>
      </Item>
    </Resources>
    <Description2></Description2>
  </Object>
</LWM2M>
